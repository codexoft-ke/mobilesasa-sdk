{
    "name": "codexoft/mobilesasa-sdk",
    "description": "Unofficial PHP SDK for Mobile Sasa's Communication Platform - Integrate bulk SMS, WhatsApp messaging, email services, USSD codes, SMS surveys, and sender ID management for comprehensive business communication solutions",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "codexoft\\MobilesasaSDK\\": "src/"
        }
    },
    "authors": [
        {
            "name": "codexoft",
            "email": "wainainamartin29@gmail.com"
        },
        {
            "name": "bitwise",
            "email": "info@bitwise.co.ke"
        }
    ],
    "require": {
        "php": ">=8.0",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
